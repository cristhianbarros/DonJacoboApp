<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.CobitosProductsFragment">

    <!-- This TextView makes references to "Cobitos" Label -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="#422710"
        android:padding="8dp"
        android:textColor="#FFF"
        android:text="Cobitos"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <!-- In this recyclerView we charge cobitos products list -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

</LinearLayout>
